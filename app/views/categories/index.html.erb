
<div class ="list_new">
<h1 class="list_category">List of Categories</h1>
<%=link_to 'Create New Category',new_category_path, class:"new_category"%>
</div>

<% if @categories.empty?%>
<h2>No categories available</h2>
<% else%>
<table>
<thead>
<tr>
<th>Name</th>
<th>Icon</th>
<th>Created At</th>
<th colspan='3'>Actions</th>
</tr>
</thead>
<tbody>
<% @categories.each do |category|%>
        <tr>
        <td class="table_data"><%=category.name%></td>
        <td><%=category.icon%></td>
        <td><%=category.created_at.strftime("%Y-%m")%></td>
        <td><%=link_to "View",category, class:"view_btn"%></td>
        <td><%=link_to "Edit",edit_category_path(category),class:"edit_btn"%></td>
        <td><%=button_to "Delete",category, method: :delete,class:"delete_btn_view"%></td>
        </tr>
    <%end%>    
</tbody>
</table>
<%end%>

